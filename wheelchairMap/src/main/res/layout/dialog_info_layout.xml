<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/curve_sharp"
    android:orientation="vertical"
    tools:context=".javaClases.CustomDialog">

    <TextView
        android:id="@id/dialog_building_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@id/dialog_building_info_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <GridLayout
            android:id="@id/grid_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="3"
            android:rowCount="3">

            <ImageView
                android:id="@id/icon_plane"
                android:layout_column="0"
                android:layout_row="0"
                android:src="@drawable/icon_plane"
                android:background="@drawable/curve_sharp_white"
                android:visibility="visible"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <ImageView
                android:id="@id/icon_inclined"
                android:layout_column="1"
                android:layout_row="0"
                android:src="@drawable/icon_inclined"
                android:background="@drawable/curve_sharp_white"
                android:visibility="visible"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <ImageView
                android:id="@id/icon_elevator"
                android:layout_column="2"
                android:layout_row="0"
                android:src="@drawable/icon_elevator"
                android:background="@drawable/curve_sharp_white"
                android:visibility="visible"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <ImageView
                android:id="@id/icon_automatic_door"
                android:layout_column="0"
                android:layout_row="1"
                android:src="@drawable/icon_automatic_door"
                android:background="@drawable/curve_sharp_white"
                android:visibility="visible"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <ImageView
                android:id="@id/icon_needs_assistance"
                android:layout_column="2"
                android:layout_row="1"
                android:src="@drawable/icon_needs_assistance"
                android:background="@drawable/curve_sharp_white"
                android:visibility="visible"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <ImageView
                android:id="@id/icon_wc"
                android:layout_column="1"
                android:layout_row="1"
                android:src="@drawable/icon_wc"
                android:background="@drawable/curve_sharp_white"
                android:visibility="visible"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <ImageView
                android:id="@id/icon_exit"
                android:layout_column="0"
                android:layout_row="2"
                android:src="@drawable/icon_exit"
                android:background="@drawable/curve_sharp_white"
                android:visibility="visible"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </GridLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/building_image"/>
    </LinearLayout>
</LinearLayout>